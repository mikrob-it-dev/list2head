        {
            "name": "Electrical Smoke in Cabin During Flight",
            "section_description" : "During night flight immediately switch ON „Emergency lights“ of cabin and\nif requiredalso EMERG. HORIZON",
            "checklist_steps": [
                {
                    "text": "LH + RH FIELD - OFF",
                    "comment": ""
                },
                {
                    "text": "LH + RH CROSS BUS - OFF",
                    "comment": ""
                },
                {
                    "text": "Verify the cause of smoke",
                    "comment": ""
                },
                {
                    "text": "Gain VMC conditions as soon as possible",
                    "comment": ""
                },
                {
                    "text": "MASTER SWITCH - OFF",
                    "comment": "If MASTER SWITCH is OFF, consider that flaps and landing gear require\nelectrical supply for normal operation."
                },
                {
                    "text": "RH FIELD - ON",
                    "comment": ""
                },
                {
                    "text": "Verify the cause of smoke",
                    "comment": ""
                },
                {
                    "text": "LH FIELD - ON",
                    "comment": ""
                },
                {
                    "text": "LH + RH FIELD - OFF",
                    "comment": "If smoke still arises"
                },
                {
                    "text": "Use fire extinguisher towards base of flames",
                    "comment": "In case of fire"
                },
                {
                    "text": "After extinguishing the fire open cabin ventilation",
                    "comment": "In case of fire"
                },
                {
                    "text": "Land as soon as practical and evacuate aircraft",
                    "comment": "In case of fire"
                }
